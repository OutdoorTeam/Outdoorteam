
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist/server",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*.ts", "server/types/**/*.d.ts", "shared/**/*.ts"],
  "exclude": ["node_modules"]
}
