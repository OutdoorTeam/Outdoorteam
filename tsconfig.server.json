
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist/server",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "server"
  },
  "include": ["server/**/*.ts", "server/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
