
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server-build",
    "rootDir": "server",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "include": ["server/**/*.ts"]
}
