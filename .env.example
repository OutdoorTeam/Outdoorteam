# Environment Variables Template

# Backend runtime
DATABASE_URL=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=
SUPABASE_JWT_SECRET=
SUPABASE_ANON_KEY=
STRICT_ENV=true

# Client build (Vite)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_API_BASE_URL=http://10.0.2.2:3001
VITE_USE_HASH_ROUTER=true

# Application configuration
NODE_ENV=development
PORT=3001
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,capacitor://localhost

# Feature flags
# Set to true to enable automatic database migrations on startup (via `npm run db:migrate`)
FEATURE_MIGRATIONS=false
# Set to true to enable database seeding on startup (via `npm run db:seed`)
FEATURE_SEED_DB=false
# Set to true to enable cron job schedulers
ENABLE_SCHEDULERS=false

# Push Notifications (VAPID) for web
# Generate with `npm run generate-vapid`
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=admin@outdoorteam.com

# Security
# Secret key for custom JWTs if not using Supabase Auth exclusively
JWT_SECRET=your-secret-key-change-in-production
